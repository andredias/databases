#!/bin/sh

export PREFIX=""
if [ -d 'venv' ] ; then
    export PREFIX="venv/bin/"
fi

if [ -z "$TEST_DATABASE_URL" ] ; then
    echo "Variable TEST_DATABASE_URL must be set."
    exit 1
fi

set -ex

if [ -z $GITHUB_ACTIONS ]; then
    scripts/check
    ${PREFIX}coverage run -m pytest $@
    scripts/coverage
else
    ${PREFIX}coverage run --parallel-mode -m pytest $@
fi
